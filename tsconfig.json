{
  "compilerOptions": {
    "incremental": true,
    "target": "es3",
    "module": "commonjs",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "checkJs": true,
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
